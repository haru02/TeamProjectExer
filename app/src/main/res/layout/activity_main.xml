<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fcteam6project.rxjavaex01.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2c2c2"

        android:scaleType="centerCrop"
        android:src="@mipmap/images4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="0dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextMainContent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:radius="15dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textViewDate"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextMainContent"
        android:layout_alignStart="@+id/editTextMainContent" />

    <Button
        android:text="입력"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/buttonMainContentSave"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_alignRight="@+id/editTextMainContent"
        android:layout_alignEnd="@+id/editTextMainContent" />

    <TextView
        android:text="HashTag"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textViewHashTag"
        android:background="#ffffff"
        android:gravity="fill_vertical"
        android:layout_below="@+id/editTextMainContent"
        android:layout_marginTop="14dp"
        android:layout_alignRight="@+id/editTextMainContent"
        android:layout_alignEnd="@+id/editTextMainContent"
        android:layout_alignLeft="@+id/editTextMainContent"
        android:layout_alignStart="@+id/editTextMainContent" />

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMainContentSignUp"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_toLeftOf="@+id/buttonMainContentSave"
        android:layout_toStartOf="@+id/buttonMainContentSave"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />


</RelativeLayout>
